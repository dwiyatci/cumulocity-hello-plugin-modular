{
  "name": "cumulocity-hello-plugin-modular",
  "version": "1.1.3",
  "description": "A boilerplate to start writing Cumulocity UI plugin with a taste of modular structure",
  "keywords": [
    "cumulocity",
    "m2m",
    "examples",
    "demo",
    "boilerplate",
    "cumulocity ui plugin",
    "cumulocity modular"
  ],
  "homepage": "https://github.com/dwiyatci/cumulocity-hello-plugin-modular",
  "bugs": "https://github.com/dwiyatci/cumulocity-hello-plugin-modular/issues",
  "license": "MIT",
  "author": "Glenn Dwiyatcita <glenn.dwiyatcita@cumulocity.com> (https://tiny.cc/dwiyatci)",
  "repository": {
    "type": "git",
    "url": "https://github.com/dwiyatci/cumulocity-hello-plugin-modular.git"
  },
  "scripts": {
    "preinstall:clean": "node ./preinstall.js rimraf yarn",
    "install:clean": "yarn upgrade && c8y install",
    "start": "c8y server -u https://glenn.cumulocity.com -k",
    "build": "npm run clean && c8y build:app",
    "deploy:easy": "npm run clean:tmp && c8y deploy:target target.json",
    "deploy:fast": "npm run deploy -- -p build/helloapp.zip",
    "deploy": "npm run clean:tmp && c8y deploy:app",
    "clean": "rimraf build",
    "clean:tmp": "rimraf _build_for_deploy"
  },
  "dependencies": {
    "cumulocity-ui-build": "http://resources.cumulocity.com/webapps/ui/7.41.1.tar.gz"
  },
  "devDependencies": {
    "cumulocity-tools": "2.0.12"
  }
}
